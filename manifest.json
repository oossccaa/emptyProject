{
    "manifest_version": 2,
    "name": "EmptyProject",
    "version": "1.0.0",
    "description": "Chrome extension empty project",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action":{
        "default_icon": "icon32.png",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [ 
        {
          "matches": ["*://*.youtube.com/*"],
          "js": ["content_scripts/index.js"],
          "css": ["content_scripts/style.css"]
        }
      ],
      "background" :{
          "scripts" :["background/bg.js"],
          "persistent" : false
      },
      "permissions": [
        "activeTab"
      ]
}